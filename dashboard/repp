                        <input type="email" id="recipientEmail" name="recipient_email" class="w-full px-4 py-2 border rounded-lg form-input focus:border-nskblue" placeholder="Enter email address" required>
                    </div>

                    <div class="flex justify-end space-x-3 pt-4">
                        <button type="button" class="close-modal px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition">
                            Cancel
                        </button>
                        <button type="submit" name="schedule_report" class="px-4 py-2 bg-nskblue text-white rounded-lg font-semibold hover:bg-nsknavy transition">
                            Schedule Report
                        </button>
                    </div>
                </form>
